#
#   Makefile.fpc for Free Pascal opencl Packages
#

[package]
name=opencl
version=3.0.0rc2

[target]
units=cl cl_gl

[require]
libc=y
packages=opengl

[compiler]
includedir=src
sourcedir=src

[install]
fpcpackage=y
fpcsubdir=packages

[default]
fpcdir=../..

[shared]
build=n

[rules]
.NOTPARALLEL:
